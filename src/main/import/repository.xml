<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
   <modules jcr:primaryType="jnt:modules">
      <newsblock j:dependencies="bootstrap4-components bootstrap4-core default news rating socialsharing tags"
                 j:modulePriority="0"
                 j:moduleType="module"
                 j:title="newsBlock"
                 jcr:mixinTypes="jmix:hasExternalProviderExtension"
                 jcr:primaryType="jnt:module">
         <sources jcr:mixinTypes="jmix:hasExternalProviderExtension jmix:sourceControl"
                  jcr:primaryType="jnt:moduleVersionFolder"
                  j:staticMountPointProviderKey="module-newsblock-1.0-SNAPSHOT">
            <src jcr:mixinTypes="jmix:hasExternalProviderExtension jmix:sourceControl"
                 jcr:primaryType="jnt:folder">
               <main jcr:mixinTypes="jmix:hasExternalProviderExtension jmix:sourceControl"
                     jcr:primaryType="jnt:folder">
                  <resources jcr:mixinTypes="jmix:hasExternalProviderExtension jmix:sourceControl"
                             jcr:primaryType="jnt:folder">
                     <META-INF jcr:mixinTypes="jmix:hasExternalProviderExtension jmix:sourceControl"
                               jcr:primaryType="jnt:metaInfFolder">
                        <definitions.cnd jcr:mixinTypes="jmix:sourceControl"
                                         jcr:primaryType="jnt:definitionFile"/>
                     </META-INF>
                  </resources>
               </main>
            </src>
         </sources>
         <portlets jcr:primaryType="jnt:portletFolder"/>
         <files jcr:primaryType="jnt:folder"/>
         <contents jcr:primaryType="jnt:contentFolder"/>
         <templates j:rootTemplatePath="/base" jcr:primaryType="jnt:templatesFolder">
            <files jcr:primaryType="jnt:folder"/>
            <contents jcr:primaryType="jnt:contentFolder"/>
            <news-content-template j:applyOn="jnt:news"
                                   j:defaultTemplate="true"
                                   j:hiddenTemplate="false"
                                   j:priority="9999999999"
                                   jcr:primaryType="jnt:contentTemplate">
               <pagecontent jcr:primaryType="jnt:contentList">
                  <newsheading j:bindedComponent="#/modules/newsblock/templates/news-content-template/pagecontent/layout-and-grid/layout-and-grid-main/main-resource-display"
                               jcr:primaryType="newsBlocknt:newsHeading"/>
                  <layout-and-grid grid="8_4"
                                   gridLayout="fixed-width"
                                   jcr:mixinTypes="bootstrap4mix:createContainer bootstrap4mix:createRow bootstrap4mix:createSection bootstrap4mix:predefinedGrid"
                                   jcr:primaryType="bootstrap4nt:grid"
                                   rowHorizontalAlignment="default"
                                   rowVerticalAlignment="default"
                                   sectionCssClass="section"
                                   sectionElement="section"
                                   typeOfGrid="predefinedGrid">
                     <layout-and-grid-side jcr:primaryType="jnt:contentList">
                        <rating jcr:primaryType="jnt:rateable"/>
                        <share-this j:bindedComponent="#/modules/newsblock/templates/news-content-template/pagecontent/layout-and-grid/layout-and-grid-main/main-resource-display"
                                    jcr:primaryType="newsBlocknt:shareNews">
                           <j:translation_en jcr:language="en"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Share This"/>
                        </share-this>
                        <listcontentfromcat j:criteria="jcr:lastModified"
                                            j:sortDirection="asc"
                                            j:subNodesView="horizontal-card"
                                            j:type="jnt:news"
                                            jcr:primaryType="newsBlocknt:listContentFromCat"
                                            maxItems="5">
                           <j:translation_en j:noResultsMessage="No news"
                                             jcr:language="en"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Related News"/>
                        </listcontentfromcat>
                     </layout-and-grid-side>
                     <layout-and-grid-main jcr:primaryType="jnt:contentList">
                        <main-resource-display j:mainResourceView="card-fulltext"
                                               jcr:primaryType="jnt:mainResourceDisplay"/>
                        <commentable jcr:primaryType="jnt:addComment"/>
                        <display-comments jcr:primaryType="jnt:commentsList"/>
                     </layout-and-grid-main>
                  </layout-and-grid>
               </pagecontent>
            </news-content-template>
         </templates>
      </newsblock>
   </modules>
</content>